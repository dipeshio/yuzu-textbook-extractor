{
  "manifest_version": 3,
  "name": "Yuzu Section Extractor",
  "version": "2.0.0",
  "description": "Extract and print sections from Yuzu Reader as clean PDFs",
  "permissions": [
    "activeTab",
    "scripting",
    "webNavigation",
    "storage",
    "downloads"
  ],
  "host_permissions": [
    "*://reader.yuzu.com/*",
    "*://jigsaw.yuzu.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
